<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ssaurel.audiorecorder.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:textSize="20sp"
        android:id="@+id/record"
        android:layout_marginTop="102dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/stop"
        android:layout_toStartOf="@+id/stop"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:textSize="20sp"
        android:id="@+id/stop"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"
        android:layout_alignBaseline="@+id/record"
        android:layout_alignBottom="@+id/record"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textSize="20sp"
        android:id="@+id/play"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/record"
        android:layout_alignRight="@+id/stop"
        android:layout_alignEnd="@+id/stop"
        android:layout_marginRight="62dp"
        android:layout_marginEnd="62dp" />
</RelativeLayout>